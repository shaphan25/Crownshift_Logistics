
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an administrator
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Admins can read and write to the admin roles collection
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
      // Allow a user to be created in the admin role collection during sign-up
      allow create: if request.auth.uid == userId;
    }

    // Rules for the top-level shipments collection
    match /shipments/{shipmentId} {
      // Admins can perform any action on any shipment
      allow read, write: if isAdmin();
      // Any user (including anonymous) can read a single shipment for tracking purposes
      allow get: if true;
      // Allow anyone to create a shipment (for the quote/booking form)
      allow create: if true;
    }

    // Rules for contact form submissions (only admins)
    match /contactFormSubmissions/{submissionId} {
      allow read, write: if isAdmin();
      // Allow anyone to create a submission
      allow create: if true;
    }
    
    // Testimonials and Services are public
    match /testimonials/{testimonialId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }

    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // By default, deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
